{
  "name": "API",
  "version": "0.0.1",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:dev": "NODE_ENV=development nodemon --inspect -V",
    "start:test": "NODE_ENV=test nodemon --inspect -V",
    "test": "yarn test:static && yarn test:unit",
    "test:unit": "NODE_ENV=test jest --maxWorkers=1",
    "test:unit:cov": "jest --coverage",
    "test:static": "tslint --project ./tsconfig.json 'src/**/*.{ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LetsEatCo/API.git"
  },
  "bugs": {
    "url": "https://github.com/LetsEatCo/API/issues"
  },
  "homepage": "https://github.com/LetsEatCo/API#readme",
  "author": "Let's Eat <hello@letseat.co>",
  "license": "GPL-3.0",
  "dependencies": {
    "@nestjs/common": "^5.3.9",
    "@nestjs/core": "^5.3.10",
    "@nestjs/cqrs": "^5.1.1",
    "@nestjs/typeorm": "^5.2.2",
    "chalk": "^2.4.1",
    "config": "^2.0.1",
    "dotenv": "^6.0.0",
    "pg": "^7.4.3",
    "pretty-error": "^2.1.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.7",
    "typescript": "^3.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.3.8",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.2",
    "@types/supertest": "^2.0.6",
    "@types/yargs": "^12.0.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.1.0",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0",
    "ts-jest": "23.0.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "^5.11.0",
    "tslint-sonarts": "^1.8.0",
    "tslint-xo": "^0.9.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleNameMapper": {
      "@common/*": "<rootDir>/app/common/*",
      "@photo": "<rootDir>/app//photo",
      "@shared/*": "<rootDir>/shared/*"
    }
  }
}
